<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
        <LangVersion>latest</LangVersion>
        <Title>Nuke.build Retype markdown addon</Title>
        <Description>Nuke.build addon for strongly typed Retype.com documentation generation tasks.</Description>
        <PackageProjectUrl>https://github.com/ApolonTorq/Nuke.Retype</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/ApolonTorq/Nuke.Retype</RepositoryUrl>
        <Authors>Apolon</Authors>
        <NoWarn>NETSDK1138</NoWarn>
        <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Nuke.CodeGeneration" Version="6.3.0" />
      <PackageReference Include="Nuke.Common" Version="6.3.0" />
    </ItemGroup>

</Project>
